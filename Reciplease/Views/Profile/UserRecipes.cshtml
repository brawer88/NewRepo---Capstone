@model Reciplease.Models.UserRecipeContent

@{
	ViewBag.Title = "User Recipe List";
}

@*Iterate over recipes to display them*@
@if ( @Model.user.IsAuthenticated == true )
{
	if ( Model.lstUserRecipes.Count > 0 )
	{
		foreach ( Reciplease.Models.Recipe recipe in Model.lstUserRecipes )
		{
		<div class="row">
			<div class="recipe-card">
				<article>
					<a href="@Url.Action( "UserSingleRecipe", "Profile", new { id = recipe.id } )">
						<p>@recipe.title</p>
					</a>
					<p>Ready In: @recipe.readyInMinutes minutes</p>
					<p>Servings: @recipe.servings</p>
					<p>Difficulty Average: @recipe.dictRatings["AverageDifficulty"]</p>
					<p>Difficulty Count: @recipe.dictRatings["DifficultyCount"]</p>
									   					 
					<p>Taste Average: @recipe.dictRatings["AverageTaste"]</p>
					<p>Taste Count: @recipe.dictRatings["TasteCount"]</p>
					
					       <a href="@Url.Action("CreateRecipe", "Profile", new { id = recipe.id })" class="button">
         				       @using ( Html.BeginForm( "EditRecipe", "Profile" ) ) Edit this recipe </a>
					
					       <a href="@Url.Action("Shopping Cart", "Profile", new { id = recipe.id })" class="button">
						Add to shopping cart </a>

				</article>

			</div>
		</div>

		}
	}
	else
	{
		<p>You don't have any recipes yet. Want to <a href="~/Profile/CreateRecipe">create</a> one?</p>
	}
}
else
{
	@Html.Partial( "NotAuthenticated" )
}


