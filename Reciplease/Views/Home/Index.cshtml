@model Reciplease.Models.HomeContent

@{ ViewBag.Title = "Home Page"; }
<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
<style>
	body {
		font-family: 'Montserrat';
	}
</style>

<div class="jumbotron">
	<img style="width:100%;height:auto" src="http://itd1.cincinnatistate.edu/CPDM-WernkeB/Content/images/site-image.png" alt="Reciplease" />
	<br />
	<p class="lead">Shop for your next meal.</p>
	<br />
</div>
<br />

@*Iterate over recipes to display them*@
@foreach (Reciplease.Models.Recipe recipe in Model.RecipesToDisplay.recipes) {
<div class="row">
	<div class="recipe-card">
		<aside>
			<a href="@Url.Action("Recipe", new { id = recipe.id })" class="button">
				<span class="icon icon-play">
					<img src=@recipe.image alt=@recipe.title />
				</span>
			</a>
		</aside>

		<article>
			<h2>@recipe.title</h2>
			<p>Ready In: @recipe.readyInMinutes minutes</p>
			<p>Servings: @recipe.servings</p>
			<p>Difficulty Average: @recipe.dictRatings["AverageDifficulty"]</p>
			<p>Difficulty Count: @recipe.dictRatings["DifficultyCount"]</p>
			<p>Taste Average: @recipe.dictRatings["AverageTaste"]</p>
			<p>Taste Count: @recipe.dictRatings["TasteCount"]</p>


		</article>
		<br />
		<br />

	</div>
</div>}
