<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Reciplease</title>
	@Styles.Render( "~/Content/css" )
	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	@Scripts.Render( "~/bundles/modernizr" )
	@Scripts.Render( "~/bundles/jquery" )
	@Scripts.Render( "~/Scripts/bootstrap.bundle.js" )
</head>
<body>
	<div class="wrapper d-flex align-items-stretch">
		<nav id="sidebar">
			<div class="custom-menu">
				<button type="button" id="sidebarCollapse" class="btn btn-primary">
					<i class="fa fa-bars"></i>
					<span class="sr-only">Toggle Menu</span>
				</button>
			</div>


			<ul class="list-unstyled components mb-5">
				<li class="active">
					<a href="~/Home/Index"><span class="fa fa-home mr-3"></span> Homepage</a>
				</li>
				<li>
					<a href="~/Home/Search"><span class="fa fa-search mr-3"></span> Search</a>
				</li>
				<li>
					<a href="~/Profile/Favorites"><span class="fa fa-paper-plane-o mr-3"></span> Favorites </a>
				</li>
				<li>
					<a href="~/Cart/index"><span class="fa fa-shopping-cart mr-3"></span> My Cart</a>
				</li>
				<li>
					<a href="~/Profile/index"><span class="fa fa-user mr-3"></span> My Account</a>
				</li>
				<li>
					<a href="~/Account_Settings/Edit_Info"><span class="fa fa-user mr-3"></span>Account Settings</a>
				</li>
			</ul>
			
			<!--- Log in button--->
			<div>
				<button id="btnSignIn" name="btnSubmit" value="signin" class="button-action" href="Reciplease/Views/Profile/index.cshtml"><i class="fas fa-sign-in-alt"></i> Sign-In</button>
			</div>
			
			<!---Sign out button--->
			<div>
				<button id="btnSignOut" name="btnSubmit" value="SignOut" class="button-action" href="Reciplease/Views/Home/Index.cshtml"><i class="fas fa-sign-out-alt"></i> Sign Out</button>
			</div>
			
		</nav>
	</div>
	<div class="container body-content">
		@RenderBody( )
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Reciplease</p>

		</footer>
	</div>


	<script>
		$('img').on('error', function () {
			$(this).attr('src', '/Content/images/no-photo.jpg');
		})
	</script>
</body>


@Scripts.Render( "~/bundles/js" )
</html>
